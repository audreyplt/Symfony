{# templates/index.html.twig#}
{% extends "commun/base.html.twig" %}

{% block title %} {{ 'Accueil' | trans }} {% endblock %}

{% block body %}
    <main role="main" class="container-fluid">
    <div class="row">
    <div class="col-md-10">
        <div class="main-div">
            <!-- debut du block content !-->
            <div class="card col-md-12">
                <div class="card-header">
                    <h1><i class="fas fa-home"></i> {{ 'Démo Symfony 4.3'|trans }}</h1>
                </div>
                <div class="card-body">
                    <div class="card clickable" onclick="location =' {{ path('boutique') }}'">
                        <img src="{{ asset('images/epicerie.jpg') }}" class="card-img-top"
                             alt="Logo Boutique Symfony">
                        <div class="card-body">
                            <p class="card-text"><i>{{ "Ici rien à vendre, c'est juste pour apprendre"|trans }}</i></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- fin du block content !-->
        </div>
    </div>
{% endblock %}