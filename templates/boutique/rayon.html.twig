{# templates/rayon.html.twig#}
{% extends "commun/base.html.twig" %}

{% block title %} {{ 'Rayon'|trans }} {% endblock %}

{% block body %}
    <main role="main" class="container-fluid">
    <div class="row">
    <div class="col-md-10">
        <div class="main-div">
            <!-- debut du block content !-->
            <div class="card col-md-12">
                <div class="card-header">
                    <h1><i class="fab fa-product-hunt"></i> {{ 'Rayon Fruits /'|trans }} {{ produits|length }}
                        {{ 'Produit(s)'|trans }}</h1>
                </div>
                <div class="card-body row">
                    {% for produit in produits %}
                        <div class="col-md-4">
                            <div class="card clickable"
                                 onclick="location = '{{ path("panier_ajouter",{'idProduit': produit.id,'quantite':1}) }}'">
                                <img src="{{ asset(produit.visuel) }}" class="card-img-produit"
                                     alt="{{ produit.libelle }}">
                                <div class="card-body">
                                    <h4 class="card-title">{{ produit.libelle }}</h4>
                                    <p class="card-text"><i>{{ produit.texte }}</i></p>
                                    <h2>
                            <span class="badge badge-primary">
                                <i class="fas fa-cart-plus"></i>&nbsp;&nbsp;
                                {{ produit.prix | currency_convert | format_currency(devise) }}
                            </span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- fin du block content !-->
            </div>
        </div>
    </div>
{% endblock %}