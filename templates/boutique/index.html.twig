{# templates/index.html.twig#}
{% extends "commun/base.html.twig" %}

{% block title %} {{ "Boutique"|trans }} {% endblock %}

{% block body %}
    <main role="main" class="container-fluid">
    <div class="row">
    <div class="col-md-10">
        <div class="main-div">
            <!-- debut du block content !-->
            <div class="card col-md-12">
                <div class="card-header">
                    <h1>
                        <i class="fas fa-store"></i> {{ 'Boutique /'|trans }} {{ categories |length }} {{ "rayon(s)"|trans }}
                    </h1>
                </div>

                <div class="card-body row">
                    {% for categorie in categories %}
                        <div class="col-md-4">
                            <div class="card clickable"
                                 onclick="location = '{{ path('rayon',{"idRayon":categorie.id} ) }}'">
                                <img src="{{ asset(categorie.visuel) }}" class="card-img-top"
                                     alt="{{ categorie.libelle }}">
                                <div class="card-body">
                                    <h4 class="card-title">{{ categorie.libelle }}</h4>
                                    <p class="card-text"><i>{{ categorie.texte }}</i></p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- fin du block content !-->
            </div>
        </div>
    </div>

{% endblock %}