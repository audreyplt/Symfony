{# templates/index.html.twig#}
{% extends "commun/base.html.twig" %}

{% block title %} {{ 'Commandes' | trans }} {% endblock %}

{% block body %}
    <main role="main" class="container-fluid">
    <div class="row">
    <div class="col-md-10">
        <div class="main-div">
            <!-- debut du block content !-->
            <div class="col-8 offset-2">
                <div class="card">
                    <div class="card-header">
                        <h3>{{ "Mes Commandes"|trans }}</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-sm table-hover">
                            <thead>
                            <tr>
                                <th>{{ "NÂ°"|trans }}</th>
                                <th>{{ "Date"|trans }}</th>
                                <th>{{ "Produits"|trans }}</th>
                                <th>{{ "Montant"|trans }}</th>
                                <th>{{ "Statut"|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for commande in commandes %}
                                <tr class="text-danger" style="font-weight: bold;">
                                    <td>{{ commande.id }}</td>
                                    <td>{{ commande.dateCommande |date("m/d/Y") }}</td>
                                    <td>{{ quantitecommandes[commande.id] }}</td>
                                    <td>{{ prixcommandes[commande.id] | currency_convert | format_currency(devise) }} </td>
                                    <td>
                                        <i class="fas fa-hourglass-half" data-toggle="tooltip" title=""
                                           data-placement="right"
                                           data-original-title="{{ "validation en Attente"|trans }}"></i>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- fin du block content !-->
        </div>
    </div>
{% endblock %}