{% extends 'commun/base.html.twig' %}

{% block title %}{{ "Gestion produits"|trans }}{% endblock %}

{% block body %}
<main role="main" class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <div class="main-div">
                <div class="card col-md-12">
                    <div class="card-header">
                        <h3>{{ "Listes des produits"|trans }}</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>{{ "Id"|trans }}</th>
                                <th>{{ "Libelle"|trans }}</th>
                                <th>{{ "Texte"|trans }}</th>
                                <th>{{ "Visuel"|trans }}</th>
                                <th>{{ "Prix"|trans }}</th>
                                <th>{{ "actions"|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for produit in produits %}
                                <tr>
                                    <td>{{ produit.id }}</td>
                                    <td>{{ produit.libelle }}</td>
                                    <td>{{ produit.texte }}</td>
                                    <td>{{ produit.visuel }}</td>
                                    <td>{{ produit.prix }}</td>
                                    <td>
                                        <a href="{{ path('produit_show', {'id': produit.id}) }}">{{ "voir"|trans }}</a>
                                        <a href="{{ path('produit_edit', {'id': produit.id}) }}">{{ "modifier"|trans }}</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">{{ "pas de produit trouvé"|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a href="{{ path('produit_new') }}">{{ "Créer un nouveau produit"|trans }}</a>

                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
