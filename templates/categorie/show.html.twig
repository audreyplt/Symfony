{% extends 'commun/base.html.twig' %}

{% block title %}{{ "Gestion catégorie"|trans }}{% endblock %}

{% block body %}

<main role="main" class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <div class="main-div">
                <div class="card col-md-12">
                    <div class="card-header">
                        <h3>{{ "Affichage des informations de la catégorie"|trans }}</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>{{ "Id"|trans }}</th>
                                <td>{{ categorie.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Libelle"|trans }}</th>
                                <td>{{ categorie.libelle }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Visuel"|trans }}</th>
                                <td>{{ categorie.visuel }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Texte"|trans }}</th>
                                <td>{{ categorie.texte }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('categorie_index') }}">{{ "retour à la liste des catégories"|trans }}</a>

                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">{{ "modifier"|trans }}</a>

                        {{ include('categorie/_delete_form.html.twig') }}

                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
